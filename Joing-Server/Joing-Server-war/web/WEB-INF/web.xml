    </servlet>
    <servlet>
        <servlet-name>Install</servlet-name>
        <servlet-class>org.joing.server.servlets.app.Install</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Uninstall</servlet-name>
        <servlet-class>org.joing.server.servlets.app.Uninstall</servlet-class>
