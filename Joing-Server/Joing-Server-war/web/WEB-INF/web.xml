    </servlet>
    <servlet>
        <servlet-name>ToTrashcan</servlet-name>
        <servlet-class>org.joing.server.servlets.vfs.ToTrashcan</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete</servlet-name>
